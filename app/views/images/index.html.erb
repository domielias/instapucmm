<h2>Subida recientes</h2>

<div class="card-columns">
  <% @galeria.each do |username, images| %>
        <% images.each do |image| %>
    <div class="card">
      <div class="card-body p-1">
          <%= image_tag image.image_url, class: 'd-block w-100' %>

          <p class="my-1"><%= image.description %></p>
          <div class="container">
          <p class="my-1"><%= username %></p>
          <span class="text-muted"><%= time_ago_in_words image.created_at %> ago</span>
          </div>
          <%= link_to "View Image", image_path(image.id,username: username), class: 'btn btn-secondary stretched-link' %>        
      </div>
    </div>
        <% end %>
  <% end %>
</div>